rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas de desarrollo - MÁS PERMISIVAS
    // ⚠️ NO USAR EN PRODUCCIÓN ⚠️
    
    // Permitir lectura y escritura para análisis
    match /analyses/{document} {
      allow read, write: if true;
    }
    
    // Permitir lectura y escritura para resultados de búsqueda
    match /search_results/{document} {
      allow read, write: if true;
    }
    
    // Permitir lectura y escritura para logs del sistema
    match /system_logs/{document} {
      allow read, write: if true;
    }
    
    // Permitir lectura y escritura para feedback de usuarios
    match /user_feedback/{document} {
      allow read, write: if true;
    }
    
    // Bloquear todo lo demás
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
