rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas simplificadas para análisis - permitir todo para desarrollo
    match /analyses/{analysisId} {
      allow read, write: if true;
    }
    
    // Reglas para usuarios
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Reglas para historial de análisis
    match /analysisHistory/{historyId} {
      allow read, write: if true;
    }
    
    // Reglas para logs de errores
    match /errorLogs/{logId} {
      allow read, write: if true;
    }
    
    // Reglas para estadísticas del sistema
    match /systemStats/{statId} {
      allow read, write: if true;
    }
  }
}
